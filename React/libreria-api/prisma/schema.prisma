generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Seccion {
  Ciencia_Ficcion
  Fantasia
  Psicologia
  Romance_Juvenil
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  nombre    String
  password  String
  libro Libro[]
  createdAt DateTime @default(now())
}

model Libro {
  id          Int      @id @default(autoincrement())
  titulo      String
  genero      String
  descripcion String?
  imagen      String?
  seccion     Seccion
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  autor     Autor    @relation(fields: [autorId], references: [id])
  autorId   Int
  createdAt   DateTime @default(now())
}

model Autor {
  id        Int      @id @default(autoincrement())
  nombre    String
  bio      String?
  foto      String?
  libro    Libro[]
  createdAt DateTime @default(now())
}

